<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activitys.InfoActivity"
    android:background="@color/white"
    android:elevation="16dp">

    <!-- toolbar com botoes e firulas -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_info"
        app:contentInsetStart="0dp"
        style="@style/ToolbarTranparent"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:contentDescription="@string/ham_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hamButton"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu_primary"
            />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scroll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ticket_card"
                android:visibility="invisible"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:elevation="5dp"
                android:layout_margin="@dimen/activity_horizontal_margin">

                <include layout="@layout/ticket_card"
                    android:background="@drawable/rounded_corner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ticket_size">
                </include>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_card"
                android:visibility="invisible"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/phone_size"
                android:background="@drawable/rounded_corner"
                android:elevation="3dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin">

                <include layout="@layout/phone_card"
                    android:background="@drawable/rounded_corner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/phone_size">
                </include>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_card"
                android:visibility="invisible"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/email_size"
                android:background="@drawable/rounded_corner"
                android:elevation="3dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin">

                <include layout="@layout/email_card"
                    android:background="@drawable/rounded_corner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/email_size">
                </include>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/place_card"
                android:visibility="invisible"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/place_size"
                android:background="@drawable/rounded_corner"
                android:elevation="3dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin">

                <include layout="@layout/place_card"
                    android:background="@drawable/rounded_corner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/place_size">
                </include>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
