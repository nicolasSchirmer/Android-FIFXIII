<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="16dp"
    tools:context=".Activity.ScheduleActivity">


    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/view3"
        style="@style/Toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="8dp"
        android:gravity="center_vertical"
        app:contentInsetStart="0dp">

        <ImageButton
            style="@style/ImageView.Hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/ham_menu"
            android:onClick="hmbClick"
            android:src="@mipmap/ic_menu" />

    </android.support.v7.widget.Toolbar>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerSchedule"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toLeftOf="@+id/imageView6"
        android:layout_toStartOf="@+id/imageView6"
        android:layout_below="@+id/view3" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/imageView5"
        android:src="@drawable/arrow_left"
        android:onClick="leftClick"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/imageView6"
        android:src="@drawable/arrow_right"
        android:onClick="rightClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicatorSchedule"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:elevation="2dp"
        app:ci_drawable="@drawable/dot_indicator_primary"
        app:ci_drawable_unselected="@drawable/dot_indicator_white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
