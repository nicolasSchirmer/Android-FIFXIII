<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner_wselector"
    android:layout_margin="10dp"
    android:clickable="true"
    android:id="@+id/rootLayoutAof"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleAoffers"
        android:text="@string/title_aoffers"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/whitePure"
        android:background="@drawable/rounded_corner_top_primary"
        android:gravity="center"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textAoffers"
        android:text="@string/text_aoffers"
        android:textSize="13sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>