<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activitys.MainActivity"
    android:background="@color/background"
    android:elevation="16dp">

    <!-- toolbar com botoes e firulas -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        style="@style/ToolbarTranparent"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:contentDescription="@string/ham_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hamButton"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu"
            />

        <!-- plugin interessante pra auto recise de imagens: Android Drawable Importer -->

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <ImageView
                android:contentDescription="@string/init_img"
                android:visibility="invisible"
                android:id="@+id/imageViewMain"
                android:layout_weight="1.5"
                android:src="@drawable/inicial2"
                android:scaleType="centerCrop"
                android:background="#00ffffff"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scroll">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/imageGlass"
                    android:layout_weight="1"
                    android:src="@drawable/glass"
                    android:scaleType="centerCrop"
                    android:alpha="0"
                    android:background="#000000"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <include layout="@layout/text_main">
                </include>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</RelativeLayout>
