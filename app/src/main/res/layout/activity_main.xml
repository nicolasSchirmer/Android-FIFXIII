<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="app.fifxiii.MainActivity"
    android:background="@color/background"
    android:elevation="16dp">

    <!-- toolbar com botoes e firulas -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        style="@style/ToolbarTranparent"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hamButton"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu"
            />

        <!-- plugin interessante pra auto recise de imagens: Android Drawable Importer -->

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_weight="1.2"
                    android:src="@drawable/inicial2"
                    android:scaleType="centerCrop"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scroll">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/imageGlass"
                        android:layout_weight="1"
                        android:src="@drawable/glass"
                        android:scaleType="centerCrop"
                        android:alpha="0"
                        android:background="#000000"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <app.fifxiii.CustomFonts.OpenSansSBoldFont
                        android:background="@color/background"
                        android:id="@+id/title_init_screen"
                        android:gravity="center"
                        android:text="@string/title_init_screen"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingStart="@dimen/activity_horizontal_margin" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background">

                        <View
                            android:layout_margin="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:alpha="0.5"
                            android:background="@color/light_gray">
                        </View>

                    </LinearLayout>

                    <app.fifxiii.CustomFonts.OpenSansRegFont
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="@color/background"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="@string/text_init_screen"
                        android:layout_weight="1"/>

                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </FrameLayout>
</RelativeLayout>
